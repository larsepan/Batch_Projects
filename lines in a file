:: Move all of a file type in this folder to another
:: by Larsepan

@ECHO OFF
CLS

:INIT
SET UN=
SET choice=

:MENU
CLS
ECHO.
ECHO ...............................................
ECHO 	FileList Test
ECHO ...............................................
ECHO. 
ECHO.
ECHO 1 - Add to list
ECHO 2 - Remove from list
ECHO 3 - Show list #
ECHO 4 - Exit
ECHO.

:ENTRYNO
SetLocal EnableDelayedExpansion
if not exist PathList.txt GOTO NOPATHSET
set "cmd=findstr /R /N "^^" PathList.txt | find /C ":""
for /f %%a in ('!cmd!') do set number=%%a
ECHO Entries Stored: %number%
EndLocal
GOTO PROMPTUSER

:NOPATHSET
ECHO Pathlist.txt file has not yet been created.

:PROMPTUSER
ECHO.
SET /P choice=Type a selection then press ENTER:

::REMOVES LEADING AND TRAILING WHITESPACE
SetLocal enabledelayedexpansion
::echo spaces "%choice%"
FOR /f "tokens=* delims= " %%a in ("%choice%") do set choice=%%a
FOR /l %%a in (1,1,100) do if "!choice:~-1!"==" " set choice=!choice:~0,-1!
::echo no spaces "%choice%"
EndLocal
::END WHITESPACE REMOVAL

IF %choice%==1 GOTO ADDPATH
IF %choice%==2 GOTO REMOVEPATH
IF %choice%==3 GOTO READ
IF %choice%==4 GOTO EOF
IF %choice%=="" GOTO INIT

:INVALID
CLS
ECHO "Invalid selection:" %choice%
PAUSE
GOTO INIT

:ADDPATH
CLS
ECHO Entry to be added:
::ECHO Example: C:\Users\someUser\Desktop\SomeFolder
::SetLocal EnableDelayedExpansion
SET /P addEntry=Entry:

::REMOVES LEADING AND TRAILING WHITESPACE
SetLocal enabledelayedexpansion
::echo spaces "%addEntry%"
ECHO You typed !addEntry!
PAUSE
REM FOR /f "tokens=* delims= " %%a in ("%addEntry%") do set addEntry=%%a
REM FOR /l %%a in (1,1,100) do if "!addEntry:~-1!"==" " set addEntry=!addEntry:~0,-1!

::echo no spaces "%addEntry%"
::EndLocal
::END WHITESPACE REMOVAL

::@echo !addEntry! >> TempPath.txt
::@echo !PathQ! >> TempPath.txt
:: ECHO is off result
ECHO You typed !addEntry!
::ECHO You also, apparently typed !PathQ!
:: If the path's last folder does not exist, ask whether to create it
@echo !addEntry! >> PathList.txt
::@echo !PathQ! > PathList.txt
EndLocal
ECHO Process Complete.
ECHO.
PAUSE
GOTO INIT

:REMOVEPATH
CLS
ECHO Entry number to remove:
::ECHO Example: C:\Users\someUser\Desktop\SomeFolder
SetLocal EnableDelayedExpansion
SET /P removeEntry=Entry:

CLS
if not exist PathList.txt GOTO NOPATHSET
for /f "tokens=1*delims=:" %%G in ('findstr /n "^" PathList.txt') do if %%G equ !removeEntry! set showRemove= %%H
ECHO The entry is !showRemove!
::remove entry code

EndLocal
PAUSE
GOTO INIT

:READ
CLS
ECHO Entry number to read:
::ECHO Example: C:\Users\someUser\Desktop\SomeFolder
SetLocal EnableDelayedExpansion
SET /P readEntry=Entry:

CLS
if not exist PathList.txt GOTO NOPATHSET
for /f "tokens=1*delims=:" %%G in ('findstr /n "^" PathList.txt') do if %%G equ !readEntry! set showRead= %%H
ECHO The entry is !showRead!

EndLocal
PAUSE
GOTO INIT
